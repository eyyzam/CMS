@model IEnumerable<CMS.Areas.Admin.Models.ViewModels.Shop.OrdersForAdminVM>

@{
    ViewBag.Title = "Placed Orders";
}

<h2>Placed Orders</h2>

@if (!Model.Any())
{
    <h3 class="text-center">No placed orders to display</h3>
}
else
{
    <table class="table">
        <tr>
            <th>
                Order Number
            </th>
            <th>
                Username
            </th>
            <th>
                Order Details
            </th>
            <th>
                Placed at
            </th>
            <th>
                Order Total
            </th>

        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @foreach( var item2 in item.ProductsAndQuantity)
            {
                @item2.Key @:x @item2.Value <br />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
    </tr>
        }

    </table>
}


